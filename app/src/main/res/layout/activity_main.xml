<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"

        tools:context="com.example.varu.ptactice_attribuits.MainActivity">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="#000" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="phone"
            android:inputType="phone"
            android:textColor="#000"
            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="I agree"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_below="@+id/radioGroup"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <EditText
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top"
            android:hint="adress"
            android:inputType="textMultiLine"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#000"
            android:layout_below="@+id/phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:entries="@array/Qualification"
            android:layout_below="@+id/adress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            android:enabled="false"
            android:text="submit"
            android:shadowColor="#000"

            android:layout_below="@+id/checkBox4"
            android:layout_centerHorizontal="true" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            android:layout_below="@+id/btn_dob"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/radioButto2"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:text="female"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button"
                android:layout_below="@+id/adress" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:text="male"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_below="@+id/adress"
                android:layout_toLeftOf="@+id/button"
                android:layout_toStartOf="@+id/button" />

        </RadioGroup>

        <EditText
            android:id="@+id/tv_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="yyyy/mm/dd"
            android:textSize="25dp"
            android:layout_alignBaseline="@+id/btn_dob"
            android:layout_alignBottom="@+id/btn_dob"
            android:layout_toLeftOf="@+id/btn_dob"
            android:layout_toStartOf="@+id/btn_dob" />

        <Button
            android:id="@+id/btn_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set DOB"
            android:background="@drawable/circular"
            android:layout_below="@+id/spinner"
            android:layout_alignRight="@+id/radioGroup"
            android:layout_alignEnd="@+id/radioGroup" />
    </RelativeLayout>


</ScrollView>